<form action="/users/{{user.id}}?_method=PUT" method="POST" style="width: 100%;" enctype="multipart/form-data">
  <div class="from-group">
    <label for="name">Name</label>
    <input type="text" class="form-control col-6" id="name" name="name" value="{{user.name}}" required>
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="text" class="form-control col-6" name="email" id="email" value="{{user.email}}" required>
  </div>
  <div class="form-group">
    <label for="image">Image</label>
    <input type="file" class="form-control-file" id="image" name="image">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>